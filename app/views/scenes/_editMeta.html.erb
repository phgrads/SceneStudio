<!-- Modal to edit scene meta data -->
<div id="EditSceneModal" class="modal hide fade"
     tabindex="-1" role="dialog"
     aria-labelledby="EditSceneModalLabel" aria-hidden="true">
  <%= form_tag(scene_path(@scene.id),
               method: 'put',
               class: 'form-horizontal modal-form',
               id: 'EditSceneForm') do %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
                aria-hidden="true">
          Ã—
        </button>
        <h3 id="EditSceneModalLabel"> Edit Scene </h3>
      </div>
      <div class="modal-body">
        <div class="field control-group">
          <%= label_tag :name, nil, class: 'control-label' %>
          <div class='controls'>
            <%= text_field_tag :name, @scene.name, autofocus: 'autofocus' %>
          </div>
          <%= label_tag :description, nil, class: 'control-label' %>
          <div class='controls'>
            <%= text_area_tag :description, @scene.description %>
          </div>
          <%= label_tag :category, nil, class: 'control-label' %>
          <div class='controls'>
            <%= text_field_tag :category, @scene.category %>
          </div>
          <%= label_tag :tag, nil, class: 'control-label' %>
          <div class='controls'>
            <%= text_field_tag :tag, @scene.tag %>
          </div>
          <%= label_tag :dataset, nil, class: 'control-label' %>
          <div class='controls'>
            <%= text_field_tag :dataset, @scene.dataset %>
          </div>
          <!--<%= label_tag :noedit, 'Read only', class: 'control-label' %>-->
          <!--<div class='controls'>-->
            <!--<%= check_box_tag :noedit, @scene.noedit %>-->
          <!--</div>-->
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn"
                data-dismiss="modal" aria-hidden="true">
          Cancel
        </button>
        <button id="EditSceneModalSave" type="button" class="btn btn-primary">Save</button>
      </div>
  <% end %>
</div>
