<!-- Modal to edit scene meta data -->
<div id="EditSceneModal" class="modal fade"
     tabindex="-1" role="dialog"
     aria-labelledby="EditSceneModalLabel">
  <div class="modal-dialog">
  <div class="modal-content">
  <%= form_tag(scene_path(@scene.id),
               method: 'put',
               class: 'form-horizontal modal-form',
               id: 'EditSceneForm') do %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
                aria-hidden="true">
          Ã—
        </button>
        <h4 class="modal-title" id="EditSceneModalLabel"> Edit Scene </h4>
      </div>
      <div class="modal-body">
        <div class="field form-group">
          <%= label_tag :name, nil, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= text_field_tag :name, @scene.name, autofocus: 'autofocus', class: 'form-control'  %>
          </div>
        </div>
        <div class="field form-group">
          <%= label_tag :description, nil, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= text_area_tag :description, @scene.description, class: 'form-control' %>
          </div>
        </div>
        <div class="field form-group">
          <%= label_tag :category, nil, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= text_field_tag :category, @scene.category, class: 'form-control' %>
          </div>
        </div>
        <div class="field form-group">
          <%= label_tag :tag, nil, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= text_field_tag :tag, @scene.tag, class: 'form-control' %>
          </div>
        </div>
        <div class="field form-group">
          <%= label_tag :dataset, nil, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= text_field_tag :dataset, @scene.dataset, class: 'form-control' %>
          </div>
        </div>
          <!--<%= label_tag :noedit, 'Read only', class: 'control-label' %>-->
          <!--<div class='controls'>-->
            <!--<%= check_box_tag :noedit, @scene.noedit %>-->
          <!--</div>-->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn"
                data-dismiss="modal" aria-hidden="true">
          Cancel
        </button>
        <button id="EditSceneModalSave" type="button" class="btn btn-primary">Save</button>
      </div>
  <% end %>
  </div>
  </div>
</div>
