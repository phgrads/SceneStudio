<% provide(:title, "My Scenes") %>
<div class="row">
  <div class="span12">
    <h3>Scenes (<%= @scene_list.count %>)
    <!-- new scene button -->
    <button class="new-scene btn btn-primary" href="#NewSceneModal"
            type="button" data-toggle="modal">
      New Scene
    </button>
    </h3>
    <%= render '/scenes/new' %>
  </div>
</div>

<!-- scene list -->
<% if @scene_list.any? %>
<div class="row-fluid">
  <div class="span12">
      <ul class="thumbnails">
        <%= render @scene_list %>
      </ul>
  </div>
</div>
<% end %>
