<script type="text/javascript">
    // We use the following structure to send data from the
    // controller to the client about what it is that they're editing
    window.globalViewData = {
    user: {
        name: "<%= current_user.name unless !current_user %>",
        id:   "<%= current_user.id unless !current_user %>"
    },
    scene: {
        name: "<%= @scene.name unless !@scene %>",
        id:   "<%= @scene.id unless !@scene %>"
    },
    on_close_url: "<%= @on_close_url %>",
    base_url: "<%= base_url %>",
    <% if @assignment %>
        assignment: {
            mtId: "<%= @assignment.mtId %>",
            id: "<%= @assignment.id %>",
        },
    <% end %>
    <% if !@via_turk && Rails.env.development? && @task %>
        task_id: <%= @task.id %>,
    <% end %>
    };

</script>
