<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/plug-ins/725b2a2115b/integration/bootstrap/3/dataTables.bootstrap.css">

<% provide(:title, "Tasks") %>
<div class="row">
  <div class="span12">
    <h3>Tasks (<%= @tasks.count %>)</h3>

    <!-- task list -->
    <% if @tasks.any? %>
        <table id="tasksTable" class="display">
          <thead>
          <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Results</th>
            <th>Test</th>
            <th>Active</th>
          </tr>
          </thead>
          <tbody>
          <%= render :partial => 'taskInfo', :collection => @tasks  %>
          </tbody>
        </table>
    <% else %>
        No MTurk tasks!  Go develop some!
    <% end %>
  </div>
</div>
<script type="text/javascript">
    // For demo to fit into DataTables site builder...
    $('#tasksTable')
            .removeClass( 'display' )
            .addClass('table table-striped table-bordered');
</script>

