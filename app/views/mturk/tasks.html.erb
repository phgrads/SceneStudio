<%= render 'experiments/datatables' %>

<% provide(:title, "Tasks") %>
<div class="row">
  <div class="col-md-12">
    <h3>Tasks (<%= @tasks.count %>)</h3>

    <!-- task list -->
    <% if @tasks.any? %>
        <table id="tasksTable" class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Assignments</th>
            <th>Results</th>
            <% if Rails.env.development? %>
            <th>Test</th>
            <% end %>
            <th>Active</th>
          </tr>
          </thead>
          <tbody>
          <%= render :partial => 'taskInfo', :collection => @tasks  %>
          </tbody>
        </table>
    <% else %>
        No MTurk tasks!  Go develop some!
    <% end %>
  </div>
</div>

