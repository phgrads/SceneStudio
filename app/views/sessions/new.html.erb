<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
  <ul class="list-unstyled">  
    <li><%= link_to(image_tag('twitter_32.png') +
                ' Twitter', @base_url + '/auth/twitter') %></li>
    <li><%= link_to(image_tag('google_32.png') +
                ' Google', @base_url + '/auth/google_oauth2') %></li>
  </ul>

  <div style="margin:10px 0px">
    <strong>or</strong> if you have a local account:
  </div>

  <%= form_tag(@base_url + "/auth/identity/callback", class: 'form-horizontal') do %>
    <div class="field form-group">
      <%= label_tag :auth_key, "Email", class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= text_field_tag :auth_key, nil, class: 'form-control' %>
      </div>
    </div>
    <div class="field form-group">
      <%= label_tag :password, nil, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-10 col-sm-offset-2'>
        <%= submit_tag "Login", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  <%= link_to "create a local account", signup_path %>
  
</div>
</div>
