<h1>New Local Account</h1>


<div class="row">
<div class="col-md-6 col-md-offset-3">
  <%= render 'shared/error_messages', object: @identity %>
  <%= form_tag(@base_url + "/auth/identity/register", class: 'form-horizontal') do %>
    <div class="field form-group">
      <%= label_tag :name, nil, class: 'col-sm-4 control-label' %>
      <div class='col-sm-8'>
        <%= text_field_tag :name, @identity.try(:name), class: 'form-control' %>
      </div>
    </div>
    <div class="field form-group">
      <%= label_tag :email, nil, class: 'col-sm-4 control-label' %>
      <div class='col-sm-8'>
        <%= text_field_tag :email, @identity.try(:email), class: 'form-control' %>
      </div>
    </div>
    <div class="field form-group">
      <%= label_tag :password, nil, class: 'col-sm-4 control-label' %>
      <div class='col-sm-8'>
        <%= password_field_tag :password, nil, class: 'form-control'%>
      </div>
    </div>
    <div class="field form-group">
      <%= label_tag :password_confirmation, 'Confirm Password', class: 'col-sm-4 control-label' %>
      <div class='col-sm-8'>
        <%= password_field_tag :password_confirmation, nil, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class='col-sm-8 col-sm-offset-4'>
        <%= submit_tag "Register", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
</div>
